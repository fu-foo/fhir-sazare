  "description": "The US Core Condition Profile meets the U.S. Core Data for Interoperability (USCDI) 'Problems' and 'Health Concerns' requirements. This profile sets minimum expectations for the Condition resource to record, search, and fetch a patient's health concerns or problems.",
  "copyright": "Used by permission of HL7 International, all rights reserved Creative Commons License",
  "fhirVersion": "4.0.1",
  "kind": "resource",
  "abstract": false,
  "type": "Condition",
  "baseDefinition": "http://hl7.org/fhir/StructureDefinition/Condition",
  "derivation": "constraint",
  "differential": {
    "element": [
      {
        "id": "Condition",
        "path": "Condition",
        "mustSupport": false
      },
      {
        "id": "Condition.clinicalStatus",
        "path": "Condition.clinicalStatus",
        "min": 0,
        "max": "1",
        "mustSupport": true,
        "condition": [
          "us-core-1"
        ]
      },
      {
        "id": "Condition.verificationStatus",
        "path": "Condition.verificationStatus",
        "min": 0,
        "max": "1",
        "mustSupport": true,
        "condition": [
          "us-core-1"
        ]
      },
      {
        "id": "Condition.category",
        "path": "Condition.category",
        "min": 1,
        "max": "*",
        "mustSupport": true
      },
      {
        "id": "Condition.code",
        "path": "Condition.code",
        "min": 1,
        "max": "1",
        "mustSupport": true,
        "binding": {
          "strength": "extensible",
          "valueSet": "http://hl7.org/fhir/us/core/ValueSet/us-core-condition-code"
        }
      },
      {
        "id": "Condition.subject",
        "path": "Condition.subject",
        "min": 1,
        "max": "1",
        "type": [
          {
            "code": "Reference",
            "targetProfile": [
              "http://hl7.org/fhir/us/core/StructureDefinition/us-core-patient"
            ]
          }
        ],
        "mustSupport": true
      }
    ]
  }
